### Plotting the top 20 significantly differentially expressed genes ###

###Plotting for the ACP(Glial)vscontrols###

sig_genes <- read.table(file.path("C:\\Users\\Asus\\Documents\\rna_seq\\results_variables_4\\results_Glialvscontrols\\sleuth_significant_q005.txt"), header = TRUE, stringsAsFactors=FALSE, sep = " ")

top_sig_genes <- sig_genes[order(sig_genes$qval),]

top20_sig_genes <- top_sig_genes[1:20,]

top20_sig_genes <- dplyr::select(top20_sig_genes, gene_id = ext_gene, q_value = qval)

top20_sig_genes

## plot using ggplot2

ggplot(data = top20_sig_genes) +
  geom_point(mapping = aes(x = gene_id, y = q_value), color = "brown", position=position_jitter(w=0.1,h=0)) +
  scale_y_log10() +
  xlab("gene_id") +
  ylab("q_value") +
  ggtitle("Top 20 Significant Differentially Expressed Genes") +
  theme_bw() +
  theme(axis.text.x = element_text(angle = 45, hjust = 1)) +
  theme(plot.title=element_text(hjust=0.5))

